{
  "manifest_version": 3,
  "name": "CzDM - Cyberzilla Download Manager",
  "short_name": "CzDM",
  "full_name": "Cyberzilla Download Manager",
  "version": "1.0.2",
  "description": "Simple Download Manager with multi-thread acceleration, Smart Media Grabber, Resume capability, and anti-corruption technology.",
  "author": "Cyberzilla",
  "permissions": [
    "downloads",
    "downloads.open",
    "storage",
    "unlimitedStorage",
    "offscreen",
    "scripting",
    "activeTab",
    "contextMenus",
    "clipboardRead",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["injector.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "img/16x16.png",
    "48": "img/48x48.png",
    "128": "img/128x128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CZDM Manager",
    "default_icon": {
      "16": "img/16x16.png",
      "48": "img/48x48.png"
    }
  }
}